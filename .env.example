# ===========================================
# CONFIGURATION POUR REPLIT LOCAL
# ===========================================

# ===========================================
# BASE DE DONNÉES
# ===========================================
DATABASE_URL="postgresql://username:password@db.thin.dev:5432/remondis_db"

# ===========================================
# SERVEUR ET SÉCURITÉ
# ===========================================
NODE_ENV="production"
PORT=5000
HOST="0.0.0.0"
REPLIT_DEPLOYMENT="true"

# Clés secrètes (générez des clés fortes)
SESSION_SECRET="votre-cle-secrete-tres-longue-et-complexe-ici"
JWT_SECRET="votre-cle-jwt-secrete-tres-longue-et-complexe-ici"

# ===========================================
# EMAIL ET NOTIFICATIONS
# ===========================================
SENDGRID_API_KEY="SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SENDGRID_VERIFIED_SENDER_EMAIL="noreply@votredomaine.com"
REMONDIS_SALES_EMAIL="commercial@votredomaine.com"

# ===========================================
# SERVICES EXTERNES
# ===========================================
GOOGLE_MAPS_API_KEY="AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Stripe
STRIPE_SECRET_KEY="sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
STRIPE_PUBLISHABLE_KEY="pk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ===========================================
# CONFIGURATION MÉTIER
# ===========================================
DEFAULT_TRANSPORT_PRICE_PER_KM="1.50"
DEFAULT_MINIMUM_FLAT_RATE="50.00"
DEFAULT_HOURLY_RATE="45.00"

INDUSTRIAL_SITE_ADDRESS="123 Rue de l'Industrie"
INDUSTRIAL_SITE_CITY="Votre Ville"
INDUSTRIAL_SITE_POSTAL_CODE="12345"
INDUSTRIAL_SITE_COUNTRY="France"

# ===========================================
# CONFIGURATION AVANCÉE
# ===========================================
# Durée d'expiration des sessions (en millisecondes)
SESSION_MAX_AGE="604800000"

# Nombre maximum de tentatives de connexion
MAX_LOGIN_ATTEMPTS="5"

# Durée de verrouillage du compte (en millisecondes)
ACCOUNT_LOCK_TIME="1800000"

# Configuration des limites de taux
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ===========================================
# LOGS ET MONITORING
# ===========================================
# Niveau de logs (error, warn, info, debug)
LOG_LEVEL="info"

# Activation du monitoring des performances
ENABLE_PERFORMANCE_MONITORING="true"

# ===========================================
# FICHIERS ET UPLOADS
# ===========================================
# Taille maximale des fichiers uploadés (en MB)
MAX_FILE_SIZE_MB="10"

# Répertoire de stockage des fichiers
UPLOAD_DIR="./uploads"

# ===========================================
# SÉCURITÉ ADDITIONNELLE
# ===========================================
# Activation du mode strict HTTPS
FORCE_HTTPS="true"

# Configuration des en-têtes de sécurité
ENABLE_SECURITY_HEADERS="true"

# Clé pour le chiffrement des données sensibles
ENCRYPTION_KEY="votre-cle-de-chiffrement-32-caracteres-minimum"