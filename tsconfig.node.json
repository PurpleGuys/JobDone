{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@assets/*": ["./attached_assets/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "vite.config.production.ts",
    "tailwind.config.ts",
    "drizzle.config.ts",
    "postcss.config.js",
    "server/**/*",
    "shared/**/*",
    "scripts/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}